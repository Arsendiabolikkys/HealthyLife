@model HealthyLife.Models.AccountLoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="forms-container">
<h4>Вхід</h4>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class="content" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary()
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label>
                    @Html.ResourceString(Constants.Account.Email)
                    @Html.EditorFor(m => m.Email)
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label>
                    @Html.ResourceString(Constants.Account.Password)
                    @Html.EditorFor(m => m.Password)
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 right">
                <input type="submit" value="Увійти" class="btn btn-default" />
            </div>
        </div>
    </div>
}
</div>