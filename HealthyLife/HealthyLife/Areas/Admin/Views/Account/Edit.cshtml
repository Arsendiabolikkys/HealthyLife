@model HealthyLife.Areas.Admin.Models.AccountViewModel
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="forms-container">
    <h4>@Model.Email</h4>
    @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class="content" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Email)
            @Html.HiddenFor(m => m.Name)
            @Html.HiddenFor(m => m.SecondName)
            @Html.ValidationSummary()
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        @Html.ResourceString(Constants.Account.AddressId)
                        @Html.DropDownListFor(m => m.AddressId, Model.Addresses)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <label>
                        @Html.ResourceString(Constants.Account.RoleId)
                        @Html.DropDownListFor(m => m.RoleId, Model.Roles)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 right">
                    <input type="submit" value="Зберегти" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>